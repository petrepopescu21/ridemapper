{
  "name": "ridemapper",
  "private": true,
  "version": "1.0.0",
  "description": "RideMapper - Real-time location tracking and route management",
  "main": "server/dist/index.js",
  "type": "module",
  "engines": {
    "node": "18.x",
    "npm": "9.x"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build && npm run copy:client",
    "copy:client": "node -e \"const fs=require('fs'); const path=require('path'); if(!fs.existsSync('server/client-dist')) fs.mkdirSync('server/client-dist', {recursive:true}); fs.cpSync('dist', 'server/client-dist', {recursive:true});\"",
    "build:server": "cd server && npm run build",
    "preview": "vite preview",
    "type-check": "vue-tsc --noEmit",
    "start": "cd server && npm start",
    "postinstall": "npm run install:server",
    "install:server": "cd server && npm install",
    "heroku-postbuild": "npm run build",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:dev-down": "docker-compose -f docker-compose.dev.yml down",
    "skaffold:dev": "skaffold dev --profile=local",
    "skaffold:run": "skaffold run --profile=local",
    "skaffold:delete": "skaffold delete --profile=local",
    "server:dev": "cd server && npm run dev",
    "server:build": "cd server && npm run build",
    "dev:all": "concurrently \"npm run server:dev\" \"npm run dev\"",
    "test": "echo \"No tests yet\" && exit 0",
    "heroku:deploy": "bash scripts/deploy-heroku.sh",
    "heroku:deploy:win": "scripts\\deploy-heroku.bat",
    "heroku:logs": "heroku logs --tail",
    "heroku:config": "heroku config",
    "heroku:ps": "heroku ps"
  },
  "keywords": [
    "vue",
    "typescript",
    "socket.io",
    "real-time",
    "location-tracking",
    "route-management",
    "maps"
  ],
  "author": "RideMapper Team",
  "license": "MIT",
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "@vueuse/core": "^10.7.0",
    "pinia": "^2.1.7",
    "socket.io-client": "^4.8.1",
    "vue": "^3.3.8",
    "vue-router": "^4.2.5",
    "vuetify": "^3.4.8"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@vitejs/plugin-vue": "^4.5.2",
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-pwa": "^0.17.4",
    "vite-plugin-vue-devtools": "^7.0.13",
    "vue-tsc": "^1.8.25"
  }
}