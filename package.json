{
  "name": "ridemapper",
  "private": true,
  "version": "1.0.0",
  "description": "RideMapper - Real-time location tracking and route management",
  "main": "server/dist/index.js",
  "type": "module",
  "engines": {
    "node": "22.x",
    "npm": "10.x"
  },
  "scripts": {
    "setup": "node scripts/setup-dev.cjs",
    "dev": "vite",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build && npm run copy:client",
    "copy:client": "node -e \"const fs=require('fs'); const path=require('path'); if(!fs.existsSync('server/client-dist')) fs.mkdirSync('server/client-dist', {recursive:true}); fs.cpSync('dist', 'server/client-dist', {recursive:true});\"",
    "build:server": "cd server && npm run build",
    "preview": "vite preview",
    "type-check": "vue-tsc --noEmit",
    "start": "cd server && npm start",
    "postinstall": "npm run install:server",
    "install:server": "cd server && npm install",
    "heroku-postbuild": "npm run build",
    "server:dev": "cd server && npm run dev",
    "server:build": "cd server && npm run build",
    "dev:all": "concurrently \"npm run server:dev\" \"npm run dev\"",
    "test": "echo \"No tests yet\" && exit 0",
    "heroku:deploy": "bash scripts/deploy-heroku.sh",
    "heroku:logs": "heroku logs --tail",
    "heroku:config": "heroku config",
    "heroku:ps": "heroku ps",
    "db:setup": "cd server && npm run db:generate && npm run db:push",
    "db:reset": "cd server && npm run db:reset",
    "db:migrate": "cd server && npm run db:migrate",
    "db:generate": "cd server && npm run db:generate"
  },
  "keywords": [
    "vue",
    "typescript",
    "socket.io",
    "real-time",
    "location-tracking",
    "route-management",
    "maps"
  ],
  "author": "RideMapper Team",
  "license": "MIT",
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "@prisma/client": "^6.8.2",
    "@vueuse/core": "^10.7.0",
    "pinia": "^2.1.7",
    "socket.io-client": "^4.8.1",
    "vue": "^3.3.8",
    "vue-router": "^4.2.5",
    "vuetify": "^3.4.8"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.5",
    "@types/node": "^20.10.5",
    "@vitejs/plugin-vue": "^4.5.2",
    "@vue/tsconfig": "^0.7.0",
    "concurrently": "^8.2.2",
    "prisma": "^6.8.2",
    "typescript": "^5.4.5",
    "vite": "^5.0.10",
    "vite-plugin-pwa": "^0.17.4",
    "vite-plugin-vue-devtools": "^7.0.13",
    "vue-tsc": "^2.2.10"
  }
}